{% extends 'base.html.twig' %}

{% block body %}
    <div class="container align-content-center text-center">
        <h1>Liste des Pertes</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Date</th>
                <th>Matiere</th>
                <th>Quantite</th>
                <th colspan="2">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for detail_perte in detail_pertes %}
                <tr>
                    <td>{{ detail_perte.perte.date | date('d/m/Y') }}</td>
                    <td>{{ detail_perte.matiere }}</td>
                    <td>{{ detail_perte.quantite }}</td>
                    <td><a href="{{ path('app_detail_perte_edit', {'id': detail_perte.id}) }}">
                            <button class="button">Modifier</button>
                        </a></td>
                    <td>{{ include('detail_perte/_delete_form.html.twig') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune perte trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_detail_perte_new') }}"><button class="button">Créer un nouveau Produit dans une Perte</button></a>
    </div>
{% endblock %}