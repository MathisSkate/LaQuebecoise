{% extends 'base.html.twig' %}

{% block body %}
    <div class="container align-content-center text-center">
        <h1>Liste des Localisations</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Rue</th>
                <th>Ville</th>
                <th>Codepostal</th>
                <th>Pays</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for localisation in localisations %}
                <tr>
                    <td>{{ localisation.nom }}</td>
                    <td>{{ localisation.rue }}</td>
                    <td>{{ localisation.ville }}</td>
                    <td>{{ localisation.codepostal }}</td>
                    <td>{{ localisation.pays }}</td>
                    <td>{{ localisation.description }}</td>
                    <td><a href="{{ path('app_localisation_edit', {'id': localisation.id}) }}">Modifier</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucune Localisation trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_localisation_new') }}">Créer une nouvelle Localisation</a>
    </div>
{% endblock %}
