{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ location.nom }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ location.rue }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ location.ville }}</td>
            </tr>
            <tr>
                <th>Codepostal</th>
                <td>{{ location.codepostal }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ location.pays }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ location.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_location_index') }}">back to list</a>

    <a href="{{ path('app_location_edit', {'id': location.id}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
