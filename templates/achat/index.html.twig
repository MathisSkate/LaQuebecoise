{% extends 'base.html.twig' %}

{% block body %}
    <div class="container align-content-center text-center">
        <h1>Liste des Matières Premières</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Date</th>
                <th>Prix</th>
                <th colspan="3">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for achat in achats %}
                <tr>
                    <td>{{ achat.date ? achat.date|date('d/m/Y') : '' }}</td>
                    <td>{{ achat.prix }}</td>
                    <td><a href="{{ path('app_achat_show', {'id': achat.id}) }}">
                            <button class="button">Afficher</button>
                        </a></td>
                    <td><a href="{{ path('app_achat_edit', {'id': achat.id}) }}">
                            <button class="button">Modifier</button>
                        </a></td>
                    <td>{{ include('achat/_delete_form.html.twig') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun achat trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_achat_new') }}"><button class="button">Créer un nouveau Achat</button></a>
    </div>
{% endblock %}
