{% extends 'base.html.twig' %}

{% block body %}
    <div class="container align-content-center text-center">
        <h1>Liste des Ventes</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Date</th>
                <th>Produit</th>
                <th>Quantite</th>
                <th colspan="2">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for detail_vente in detail_ventes %}
                <tr>
                    <td>{{ detail_vente.vente.date | date('d/m/Y') }}</td>
                    <td>{{ detail_vente.produit }}</td>
                    <td>{{ detail_vente.quantite }}</td>
                    <td><a href="{{ path('app_detail_vente_edit', {'id': detail_vente.id}) }}">
                            <button class="button">Modifier</button>
                        </a></td>
                    <td>{{ include('detail_vente/_delete_form.html.twig') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune vente trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_detail_vente_new') }}"><button class="button">Créer un nouveau Produit dans une Vente</button></a>
    </div>
{% endblock %}