{% extends 'base.html.twig' %}

{% block body %}
    <div class="container align-content-center text-center">
        <h1>Liste des Achats du {{ date | date('d/m/Y') }}</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Matiere</th>
                <th>Quantité</th>
                <th>Prix</th>
                <th colspan="2">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for detail_achat in detail_achats %}
                <tr>
                    <td>{{ detail_achat.matiere }}</td>
                    <td>{{ detail_achat.quantite }}</td>
                    <td>{{ detail_achat.prix }}</td>
                    <td><a href="{{ path('app_detail_achat_edit', {'id': detail_achat.id}) }}">
                            <button class="button">Modifier</button>
                        </a></td>
                    <td>{{ include('detail_achat/_delete_form.html.twig') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun achat trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_detail_achat_new') }}"><button class="button">Créer un nouveau Produit dans un Achat</button></a>
        <a href="{{ path('app_achat_index') }}"><button class="button">Vers les Achats</button></a>
    </div>
{% endblock %}
